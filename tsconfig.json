{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "lib": ["es6"],
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "lib": ["ES2016"],
  "exclude": ["node_modules","dist"],
  "include": ["**/*.ts"]
}
